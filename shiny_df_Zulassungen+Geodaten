library(dplyr)

# Liste der relevanten Städte definieren
selected_cities <- c("AACHEN", "BONN", "KOELN", "DORTMUND", "BIELEFELD", "OBERHAUSEN", "BOCHUM", "MUENSTER")

# Liste der relevanten Spalten definieren
selected_columns <- c("Gemeinden", "ID_Fahrzeug", "X", "ID_T01.x", "Fehlerhaft_Datum_T01.x", "Fehlerhaft_Fahrleistung_T01.x",
                       "ID_T01.y", "Fehlerhaft_Datum_T01.y", "Fehlerhaft_Fahrleistung_T01.y", "ID_T02", 
                       "Fehlerhaft_Datum_T02", "Fehlerhaft_Fahrleistung_T02", "Laengengrad", "Breitengrad")

# Auswahl der Daten für die ausgewählten Städte
result_final_selected <- result_final %>%
  filter(Gemeinden %in% selected_cities) %>%
  select(all_of(selected_columns))

# Anzeigen der Ergebnisse
glimpse(result_final_selected)

